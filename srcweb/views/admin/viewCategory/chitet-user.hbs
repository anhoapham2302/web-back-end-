
    <h1>Edit Profile</h1>
	<div class="row">
      <!-- left column -->
      
      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        
        <form class="form-horizontal" role="form" method="POST" action="/account/profile/update">

           <div class="form-group">
            <label class="col-lg-3 control-label">ID:</label>
            <div class="col-lg-8">
             <input readonly type="text" class="form-control" style="height: 40px; width:250px;" id="txtTagID" name="UID" value="{{this.user.UID}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Họ tên:</label>
            <div class="col-lg-8">
              <input readonly class="form-control" type="text" style="height: 35px; width:300px;" name="UName" value="{{this.user.UName}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Bút danh:</label>
            <div class="col-lg-8">
              <input readonly class="form-control" type="text"style="height: 35px; width:300px;" name="UNick" value="{{this.user.UNick}}">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label">Email:</label>
            <div class="col-lg-8">
              <input readonly class="form-control" type="email"style="height: 35px; width:300px;" name="UEmail" value="{{this.user.UEmail}}">
            </div>
          </div>        
          <div class="form-group">
            <label class="col-lg-3 control-label">Phân quyền:</label>
            <div class="col-lg-8">

  <select class="form-control" id="sel1" name="URole">
    <option value="1">Quản trị viên</option>
    <option value="2">Biên tập viên</option>
    <option value="3">Phóng viên</option>
    <option value="4">Độc giả</option>
  </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
              <input type="submit" class="btn btn-primary" value="Save Changes">
              <span></span>
              <input type="reset" class="btn btn-default" value="Cancel">
            </div>
          </div>
        </form>
      </div>
  </div>
